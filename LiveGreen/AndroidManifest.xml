<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livegreen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.livegreen.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.livegreen.MainActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|screenSize">
            
        </activity>
        <activity
            android:name="com.livegreen.UserActivityFragment"
            android:label="@string/title_activity_user_activity_fragment"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.livegreen.FriendActivityFragment"
            android:label="@string/title_activity_friend_activity_fragment"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.livegreen.AchievementActivityFragment"
            android:label="@string/title_activity_achievement_activity_fragment" 
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.livegreen.TipOffersActivityFragment"
            android:label="@string/title_activity_tip_offers_activity_fragment"
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>
